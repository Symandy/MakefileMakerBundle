{
    "name": "symandy/makefile-maker-bundle",
    "description": "Generate Makefile for Symfony application",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Symandy\\MakefileMakerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symandy\\Tests\\MakefileMakerBundle\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "SamaÃ«l",
            "email": "villette.samael@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/maker-bundle": "^1.36",
        "symfony/process": "^5.4|^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "symfony/test-pack": "^1.0"
    },
    "scripts": {
        "analayse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit tests --colors always"
    }
}
